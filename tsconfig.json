{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2015", "dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "paths": {
        "src/*": ["src/*"],
      },
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "."
    },
    "include": ["src/**/*"]
  }
  